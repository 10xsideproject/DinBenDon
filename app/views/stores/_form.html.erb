<%= form_for(store) do |f| %>
  <div class="mb-3">
    <%= f.label :name , '店名', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :address , '地址', class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :tel , '電話', class: 'form-label' %>
    <%= f.telephone_field :tel, class: 'form-control' %>
  </div>
  <%= f.submit '送出', class: 'btn btn-primary' %>
<% end %>
