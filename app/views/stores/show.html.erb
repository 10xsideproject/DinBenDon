<h2>新增商品</h2>
<%= form_with model: @product do |f| %>
  <div>
    <%= f.label :name , '商品名稱' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :price , '商品價格' %>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.hidden_field :store_id %>
  </div>
  <%= f.submit '送出' %>
<% end %>

<h2>訂購商品</h2>
<%= form_with model: @order, method: 'post' do |f| %> 
  <div>
    <%= f.label :name , "姓名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :product_id , "品項" %>
    <%= f.collection_select :product_id, Product.all, :id, :name  %>
  </div>
  <div>
    <%= f.label :qunitiy , "數量" %>
    <%= f.number_field :qunitiy  %>
  </div> 
  <%= f.submit '訂購' %> 
<% end %> 
  