<ul>
  <li><%= @store.name %></li>
  <li><%= @store.address %></li>
  <li><%= @store.tel %></li>
</ul>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= product.name %>
      <%= product.price %>
      <%= link_to "編輯商品", edit_product_path(product.id, store_id: product.store_id) %>
      <%= link_to "刪除商品", product_path(product.id, store_id: product.store_id), method: "delete" %>
    </li>
  <% end %>  
</ul>

<%# <%= link_to "新增商品", new_product_path(store_id: @product.store_id) %> 

<%= form_with model: @product do |f| %>
  <div>
    <%= f.label :name , '商品名稱' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :price , '商品價格' %>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.hidden_field :store_id %>
  </div>
  <%= f.submit '送出' %>
<% end %>