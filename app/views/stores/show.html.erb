<ul>
  <li><%= @store.name %></li>
  <li><%= @store.address %></li>
  <li><%= @store.tel %></li>
</ul>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= product.name %>
      <%= product.price %>
      <%= link_to "編輯商品", edit_product_path(product.id, store_id: product.store_id) %>
      <%= link_to "刪除商品", product_path(product.id, store_id: product.store_id), method: "delete" %>
    </li>
  <% end %>  
</ul>

